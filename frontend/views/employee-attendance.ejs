<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Employee Attendance</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>
    <%- include('navigationbar') %>

    <div class="container mt-4">
        <h2 class="mb-4">Attendance for <%= employee.first_name %></h2>
        <% if (attendance.length > 0) { %>

        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Month</th>
                    <th>Days Present</th>
                    <th>Days Absent</th>
                    <th>Overtime Hours</th>
                </tr>
            </thead>
            <tbody>
                <% attendance.forEach(record => { %>
                    <tr>
                        <td><%= record.month %></td>
                        <td><%= record.daysPresent %></td>
                        <td><%= record.daysAbsent %></td>
                        <td><%= record.overtimeHours %></td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
        <% } else { %>
            <div class="alert alert-info" role="alert">
                No attendance records at the moment.
            </div>
        <% } %>        <h3 class="mt-4">Contact Admin</h3>
        <form action="/contact-admin" method="POST">
            <input type="hidden" name="employeeID" value="<%= employee.employeeID %>">
            <div class="form-group">
                <label for="subject">Subject</label>
                <input type="text" class="form-control" id="subject" name="subject" required>
            </div>
            <div class="form-group">
                <label for="message">Message</label>
                <textarea class="form-control" id="message" name="message" rows="4" required></textarea>
            </div>
            <button type="submit" class="btn btn-primary">Send</button>
        </form>
    </div>

    <!-- jQuery and Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <%- include('footer') %>

</body>
</html>
