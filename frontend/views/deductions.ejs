<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Employee Allowances and Deductions</title>
  <!-- Bootstrap CSS -->
  <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
  <!-- Font Awesome for icons -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" integrity="sha512-..." crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>
<body>
  <%- include('admin-sidebar') %>

  <div class="container mt-5">
    <h1 class="mb-4">Employee Allowances and Deductions</h1>
    <table id="employee-table" class="table table-bordered">
      <thead class="thead-dark">
        <tr>
          <th>Employee ID</th>
          <th>Name</th>
          <th>Base Salary</th>
          <th>Transport Allowance</th>
          <th>Medical Allowance</th>
          <th>Meal Allowance</th>
          <th>Retirement Insurance</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% for (const employee of employeeData) { %>
          <tr>
            <td><%= employee.employeeID %></td>
            <td><%= employee.first_name %> <%= employee.last_name %></td>
            <td><%= employee.baseSalary %></td>
            <td><%= employee.transport_allowance %></td>
            <td><%= employee.medical_allowance %></td>
            <td><%= employee.meal_allowance %></td>
            <td><%= employee.retirement_insurance %></td>
            <td>
              <button class="btn btn-primary edit-btn" data-toggle="modal" data-target="#editModal" data-id="<%= employee.employeeID %>">Edit</button>
            </td>
          </tr>
          
        <% } %>      
      </tbody>
    </table>
    <!-- Pagination Controls -->
    <nav aria-label="Page navigation">
      <ul class="pagination">
        <% if (currentPage > 1) { %>
          <li class="page-item">
            <a class="page-link" href="?page=<%= currentPage - 1 %>">Previous</a>
          </li>
        <% } %>
        <% for (let i = 1; i <= totalPages; i++) { %>
          <li class="page-item <%= i === currentPage ? 'active' : '' %>">
            <a class="page-link" href="?page=<%= i %>"><%= i %></a>
          </li>
        <% } %>
        <% if (currentPage < totalPages) { %>
          <li class="page-item">
            <a class="page-link" href="?page=<%= currentPage + 1 %>">Next</a>
          </li>
        <% } %>
      </ul>
    </nav>
  </div>
  
 <!-- Edit Modal -->
 <div id="editModal" class="modal fade">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Edit Allowances & Deductions for <%= employee.employeeID %></h5>
        <button type="button" class="close" data-dismiss="modal">&times;</button>
      </div>
      <form id="editForm" action="/admin/deductions/edit/<%= employee.employeeID %>" method="POST">
        <div class="modal-body">
          <input type="hidden" id="editEmployeeId" name="editEmployeeId">
          <div class="form-group">
            <label for="editTransport">Transport Allowance:</label>
            <input type="text" class="form-control" id="editTransport" name="transport_allowance" value="<%= employee.transport_allowance %>">
          </div>
          <div class="form-group">
            <label for="editMedical">Medical Allowance:</label>
            <input type="text" class="form-control" id="editMedical" name="medical_allowance" value="<%= employee.medical_allowance %>">
          </div>
          <div class="form-group">
            <label for="editMeal">Meal Allowance:</label>
            <input type="text" class="form-control" id="editMeal" name="meal_allowance" value="<%= employee.meal_allowance %>">
          </div>
          <div class="form-group">
            <label for="editRetirement">Retirement Insurance:</label>
            <input type="text" class="form-control" id="editRetirement" name="retirement_insurance" value="<%= employee.retirement_insurance %>">
          </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          <button type="submit" class="btn btn-primary">Save Changes</button>
        </div>
      </form>
    </div>

  </div>
</div>
  <!-- Bootstrap JS and jQuery -->
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
  <script>

  </script>
  <%- include('footer') %>
</body>
</html>
