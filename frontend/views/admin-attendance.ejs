<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Employee Attendance</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    <style>
        .attendance-table th, .attendance-table td {
            vertical-align: middle;
        }
    </style>
</head>
<body>
    <%- include('admin-sidebar') %>

    <div class="container mt-4">
        <h2 class="mb-4">Employee Attendance Tracking</h2>
        <div class="row">
            <div class="col text-left">
                <button class="btn btn-info mb-3" id="import-attendance-btn">Import Attendance</button>
            </div>
        </div>
        <!-- Attendance Records -->
        <div class="card mb-4">
            <div class="card-header">
                Attendance Records
            </div>

            <div class="card-body">
                <% if (attendanceRecords.length > 0) { %>
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>Record ID</th>
                                <th>Employee ID</th>
                                <th>Month</th>
                                <th>Days Present</th>
                                <th>Days Absent</th>
                                <th>Overtime Hours</th>
                                <th>Action</th>

                            </tr>
                        </thead>
                        <tbody>
                            <% attendanceRecords.forEach(record => { %>
                                <tr>
                                    <td><%= record.record_id %></td>
                                    <td><%= record.employee_id %></td>
                                    <td><%= record.month %></td>
                                    <td><%= record.daysPresent %></td>
                                    <td><%= record.daysAbsent %></td>
                                    <td><%= record.overtime_hours %></td>
                                    <td>
                                        <button class="btn btn-primary btn-sm" data-toggle="modal" data-target="#editAttendanceModal" data-id="<%= record.employeeID %>" data-month="<%= record.month %>">Edit</button>
                                    </td>
                                </tr>
                            <% }); %>
                        </tbody>
                    </table>
                    <!-- Pagination Controls -->
        <nav aria-label="Page navigation">
            <ul class="pagination">
                <% if (currentPage > 1) { %>
                    <li class="page-item">
                        <a class="page-link" href="?page=<%= currentPage - 1 %>">Previous</a>
                    </li>
                <% } %>
                <% for (let i = 1; i <= totalPages; i++) { %>
                    <li class="page-item <%= i === currentPage ? 'active' : '' %>">
                        <a class="page-link" href="?page=<%= i %>"><%= i %></a>
                    </li>
                <% } %>
                <% if (currentPage < totalPages) { %>
                    <li class="page-item">
                        <a class="page-link" href="?page=<%= currentPage + 1 %>">Next</a>
                    </li>
                <% } %>
            </ul>
        </nav>
                <% } else { %>
                    <div class="alert alert-info" role="alert">
                        No attendance records at the moment.
                    </div>
                <% } %>
            </div>
        </div>
        <!-- Leave Requests -->
        <div class="card mb-4">
            <div class="card-header">
                Leave Requests
            </div>
            <div class="card-body">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Request ID</th>
                            <th>Employee ID</th>
                            <th>Leave Type</th>
                            <th>Start Date</th>
                            <th>End Date</th>
                            <th>Status</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <!-- Loop through leave requests -->
                        <% leaveRequests.forEach(request => { %>
                            <tr>
                                <td><%= request.request_id %></td>
                                <td><%= request.employee_id %></td>
                                <td><%= request.leave_type %></td>
                                <td><%= request.start_date.toLocaleDateString('en-US') %></td>
                                <td><%= request.end_date.toLocaleDateString('en-US') %></td>
                                <td><%= request.status %></td>
                                <td>
                                    <button class="btn btn-success btn-sm" onclick="approveLeave('<%= request.request_id %>')">Approve</button>
                                    
                                    <button class="btn btn-danger btn-sm" onclick="rejectLeave('<%= request.request_id %>')">Reject</button>
                                </td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Generate Attendance Report -->
        <div class="card mb-4">
            <div class="card-header">
                Generate Attendance Report
            </div>
            <div class="card-body">
                <form action="/admin/generateAttendanceReport" method="POST">
                    <div class="form-group">
                        <label for="reportMonth">Select Month</label>
                        <input type="month" class="form-control" id="reportMonth" name="reportMonth" required>
                    </div>
                    <button type="submit" class="btn btn-primary">Generate Report</button>
                </form>
            </div>
        </div>
    </div>

    <!-- Edit Attendance Modal -->
    <div class="modal fade" id="editAttendanceModal" tabindex="-1" role="dialog" aria-labelledby="editAttendanceModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="editAttendanceModalLabel">Edit Attendance</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form action="/editAttendance" method="POST">
                        <input type="hidden" id="editEmployeeID" name="employeeID">
                        <input type="hidden" id="editMonth" name="month">
                        <div class="form-group">
                            <label for="editDaysPresent">Days Present</label>
                            <input type="number" class="form-control" id="editDaysPresent" name="daysPresent" required>
                        </div>
                        <div class="form-group">
                            <label for="editDaysAbsent">Days Absent</label>
                            <input type="number" class="form-control" id="editDaysAbsent" name="daysAbsent" required>
                        </div>
                        <div class="form-group">
                            <label for="editOvertimeHours">Overtime Hours</label>
                            <input type="number" class="form-control" id="editOvertimeHours" name="overtimeHours" required>
                        </div>
                        <button type="submit" class="btn btn-primary">Save Changes</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
  <!--  Import Attendance Modal -->
  <div class="modal fade" id="importAttendanceModal" tabindex="-1" aria-labelledby="importAttendanceModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="importAttendanceModalLabel">Import Attendance</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="importAttendanceModalForm">
                    <div class="form-group">
                        <label for="attendance">Upload Attendance</label>
                        <input type="file" class="form-control-file" id="attendance" required>
                    </div>
                    <button type="submit" class="btn btn-primary">Import Attendance</button>
                </form>
            </div>
        </div>
    </div>
</div>
    <!-- jQuery and Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

    <script>
        $('#editAttendanceModal').on('show.bs.modal', function (event) {
            var button = $(event.relatedTarget);
            var employeeID = button.data('id');
            var month = button.data('month');

            var modal = $(this);
            modal.find('#editEmployeeID').val(employeeID);
            modal.find('#editMonth').val(month);
        });
        
$(document).ready(function() {
  $('#import-attendance-btn').click(function(e) {
    e.preventDefault(); // Prevent default button action (if applicable)
    $('#importAttendanceModal').modal('show');
  });
});
function approveLeave(requestId) {
    $.ajax({
        url: '/admin/approve-leave/'+requestId,
        method: 'POST',
        contentType: 'application/json',
        data: JSON.stringify({ requestId: requestId }),
        success: function(response) {
            alert(response.message);
            // Optionally, update the UI to reflect the approved status
        },
        error: function(xhr, status, error) {
            alert('Error: ' + xhr.responseJSON.message);
        }
    });
}
function rejectLeave(requestId) {
    $.ajax({
        url: '/admin/reject-leave/'+requestId,
        method: 'POST',
        contentType: 'application/json',
        data: JSON.stringify({ requestId: requestId }),
        success: function(response) {
            alert(response.message);
            // Optionally, update the UI to reflect the approved status
        },
        error: function(xhr, status, error) {
            alert('Error: ' + xhr.responseJSON.message);
        }
    });
}
    </script>
      
</body>
</html>
