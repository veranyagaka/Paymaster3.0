<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Attendance Records</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-siEtznLwTpEVVAzERYvOHmCTbwzW2n5qwbvSC8U1n3lOMKdWEzqyqC8kpByT5T1p" crossorigin="anonymous">
    <style>
        .table th, .table td {
            vertical-align: middle;
        }
        .table thead th {
            background-color: #f8f9fa;
        }
        .container {
            padding-top: 20px;
        }
    </style>
</head>
<body>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/5.0.0-alpha1/css/bootstrap.min.css" rel="stylesheet">
<style>
    body {
        font-family: 'Nunito', sans-serif;
    }

    #wrapper {
        display: flex;
        align-items: stretch;
    }

    #sidebar-wrapper {
        width: 250px;
        background-color: #343a40;
    }

    #page-content-wrapper {
        width: 100%;
    }

    #wrapper.toggled #sidebar-wrapper {
        margin-left: -250px;
    }

    .sidebar-heading {
        padding: 1rem;
        font-size: 1.2rem;
        color: #fff;
        background-color: #343a40;
    }

    .list-group-item {
        padding: 20px 15px;
        color: #fff;
    }

    .list-group-item:hover {
        background-color: #495057;
    }

    .navbar-nav .nav-item .nav-link {
        color: #495057;
    }

    .navbar-nav .nav-item .badge {
        margin-left: 5px;
    }
</style>

<div class="d-flex" id="wrapper">
    <!-- Sidebar -->
    <div class="border-right" id="sidebar-wrapper">
        <div class="logo text-center p-3">
            <img src="/favicon.ico" alt="Paymaster Logo" style="width: 50px; height: 50px;">
            <div class="sidebar-heading">Paymaster</div>
        </div>
        <div class="list-group list-group-flush">
            <a href="/admin" class="list-group-item list-group-item-action bg-dark text-white">Dashboard</a>
            <a href="/admin/employees" class="list-group-item list-group-item-action bg-dark text-white">Employees</a>
            <a href="/admin/attendance-records" class="list-group-item list-group-item-action bg-dark text-white">Attendance</a>
            <a href="/admin/leave-requests" class="list-group-item list-group-item-action bg-dark text-white">Leave</a>
            <a href="#" class="list-group-item list-group-item-action bg-dark text-white">Salaries</a>
            <a href="#" class="list-group-item list-group-item-action bg-dark text-white">Reports</a>
            <a href="#" class="list-group-item list-group-item-action bg-dark text-white">Log out</a>
        </div>
    </div>
    <!-- /#sidebar-wrapper -->

    <!-- Page Content -->
    <div id="page-content-wrapper">
        <div class="container-fluid">

        <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom">
            <button class="btn btn-primary" id="menu-toggle">Toggle Menu</button>
            <form class="form-inline my-2 my-lg-0 ml-auto">
                <input class="form-control mr-sm-2" type="search" placeholder="Search..." aria-label="Search">
            </form>
            <div class="navbar-nav ml-auto">
                <a class="nav-item nav-link" href="#">Messages <span class="badge badge-pill badge-primary">4</span></a>
                <a class="nav-item nav-link" href="#">Notifications <span class="badge badge-pill badge-primary">4</span></a>
                <a class="nav-item nav-link" href="#">Hi, Vera</a>
            </div>
        </nav>
    </div>
    <!-- /#page-content-wrapper -->
<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.3/dist/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/5.0.0-alpha1/js/bootstrap.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    $("#menu-toggle").click(function(e) {
        e.preventDefault();
        $("#wrapper").toggleClass("toggled");
    });
</script>

    <div class="container">
        <h1 class="my-4">Attendance Records</h1>

        <% if (attendanceRecords.length > 0) { %>
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Record ID</th>
                        <th>Employee ID</th>
                        <th>Week Start</th>
                        <th>Hours Worked</th>
                        <th>Overtime Hours</th>
                    </tr>
                </thead>
                <tbody>
                    <% attendanceRecords.forEach(record => { %>
                        <tr>
                            <td><%= record.record_id %></td>
                            <td><%= record.employee_id %></td>
                            <td><%= record.week_start %></td>
                            <td><%= record.hours_worked %></td>
                            <td><%= record.overtime_hours %></td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        <% } else { %>
            <div class="alert alert-info" role="alert">
                No attendance records at the moment.
            </div>
        <% } %>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</div>

</body>
</html>
