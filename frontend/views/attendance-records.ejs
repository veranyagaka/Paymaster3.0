<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Attendance Records</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-siEtznLwTpEVVAzERYvOHmCTbwzW2n5qwbvSC8U1n3lOMKdWEzqyqC8kpByT5T1p" crossorigin="anonymous">
    <%- include('admin-sidebar') %>

    <div class="container">
        <div class="container mt-5">
            <div class="row">
                <div class="col text-left">
                    <button class="btn btn-info mb-3" id="import-attendance-btn">Import Attendance</button>
                </div>
            </div>
        </div>
        <% if (attendanceRecords.length > 0) { %>
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Record ID</th>
                        <th>Employee ID</th>
                        <th>Month</th>
                        <th>Days Present</th>
                        <th>Days Absent</th>
                        <th>Overtime Hours</th>
                    </tr>
                </thead>
                <tbody>
                    <% attendanceRecords.forEach(record => { %>
                        <tr>
                            <td><%= record.record_id %></td>
                            <td><%= record.employee_id %></td>
                            <td><%= record.month %></td>
                            <td><%= record.daysPresent %></td>
                            <td><%= record.daysAbsent %></td>
                            <td><%= record.overtime_hours %></td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        <% } else { %>
            <div class="alert alert-info" role="alert">
                No attendance records at the moment.
            </div>
        <% } %>
    </div>
    <div class="col text-right">
        <button class="btn btn-dark" id="export-attendance-btn">Export Attendance</button>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</div>

</body>
</html>
