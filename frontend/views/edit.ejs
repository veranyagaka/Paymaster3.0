<%- include('sidebar') %>

<h1>Edit Employee</h1>

<% if (locals.errorMessage) { %>
  <p style="color: red;"><%= locals.errorMessage %></p>
<% } %>

<form action="#" method="POST">
  <label for="name">Name:</label>
  <input type="text" id="name" name="name" value="<%= employee.name %>"><br>
  <label for="position">Position:</label>
  <input type="text" id="position" name="position" value="<%= employee.position %>"><br>
  <label for="department">Department:</label>
  <input type="text" id="department" name="department" value="<%= employee.department %>"><br>
  <button type="submit">Save Changes</button>
</form>

<%- include('footer') %>
