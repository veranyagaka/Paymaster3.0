<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Calendar</title>
    <link rel="stylesheet" href="/css/calendar.css">
</head>
<body>
    <div class="sidebar">
        <div class="calendar-section">
            <div class="calendar-header">
                <div class="icon">üìÖ</div>
                <div class="title">Calendar</div>
                <div class="toggle" onclick="toggleSection('calendar-body')">‚ñæ</div>
            </div>
            <div class="calendar-body" id="calendar-body">
                <div class="month">
                    <div class="month-nav" onclick="prevMonth()">‚Äπ</div>
                    <div class="month-title" id="month-title">June 2024</div>
                    <div class="month-nav" onclick="nextMonth()">‚Ä∫</div>
                </div>
                <div class="weekdays">
                    <div>Su</div><div>Mo</div><div>Tu</div><div>We</div><div>Th</div><div>Fr</div><div>Sa</div>
                </div>
                <div class="days" id="calendar-days">
                    <!-- Days will be generated by JavaScript -->
                </div>
            </div>
        </div>
        <div class="events-section">
            <div class="events-header">
                <div class="icon">üìÖ</div>
                <div class="title">Events</div>
                <div class="toggle" onclick="toggleSection('events-body')">‚ñæ</div>
            </div>
            <div class="events-body" id="events-body">
                <div class="event-date" id="event-date">Saturday 15</div>
                <div class="events-list" id="events-list">No events on this date</div>
            </div>
        </div>
        <div class="help-button" onclick="showHelp()">‚ùì</div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
    const daysContainer = document.getElementById('calendar-days');
    const monthTitle = document.getElementById('month-title');
    const eventDate = document.getElementById('event-date');
    const eventsList = document.getElementById('events-list');

    let selectedDate = new Date(2024, 5, 15);
    renderCalendar(selectedDate);

    function renderCalendar(date) {
        const year = date.getFullYear();
        const month = date.getMonth();
        const firstDay = new Date(year, month, 1).getDay();
        const daysInMonth = new Date(year, month + 1, 0).getDate();

        monthTitle.textContent = date.toLocaleDateString('en-US', { month: 'long', year: 'numeric' });

        daysContainer.innerHTML = '';
        for (let i = 0; i < firstDay; i++) {
            daysContainer.innerHTML += '<div></div>';
        }
        for (let i = 1; i <= daysInMonth; i++) {
            const dayElement = document.createElement('div');
            dayElement.textContent = i;
            if (i === date.getDate()) {
                dayElement.classList.add('selected');
            }
            dayElement.addEventListener('click', () => {
                selectedDate.setDate(i);
                updateEvents(selectedDate);
                renderCalendar(selectedDate);
            });
            daysContainer.appendChild(dayElement);
        }
    }

    function updateEvents(date) {
        const day = date.getDate();
        const weekday = date.toLocaleDateString('en-US', { weekday: 'long' });
        eventDate.textContent = `${weekday} ${day}`;
        eventsList.textContent = 'No events on this date';
    }

    function prevMonth() {
        selectedDate.setMonth(selectedDate.getMonth() - 1);
        renderCalendar(selectedDate);
    }

    function nextMonth() {
        selectedDate.setMonth(selectedDate.getMonth() + 1);
        renderCalendar(selectedDate);
    }

    window.toggleSection = function(sectionId) {
        const section = document.getElementById(sectionId);
        section.style.display = section.style.display === 'none' ? 'block' : 'none';
    };

    window.showHelp = function() {
        alert('Help information goes here.');
    };

    updateEvents(selectedDate);
});

    </script>
</body>
</html>
